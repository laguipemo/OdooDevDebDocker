<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="lgpm_maintenace_sat_report_resources_list">
      <field name="name">lgpm_maintenance_sat_report_resources list</field>
      <field name="model">lgpm_maintenance.sat_report_resources</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="title_0"/>
            <field name="title"/>
            <field name="figure"/>
        </tree>
      </field>
    </record>

    <!-- explicit list form definition -->

    <record model="ir.ui.view" id="lgpm_maintenace_sat_report_resources_form">
      <field name="name">lgpm_maintenance_sat_report_resources form</field>
      <field name="model">lgpm_maintenance.sat_report_resources</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="title_0"/>
              <field name="title"/>
              <field name="figure"/>
            </group>
          </sheet>
          
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="lgpm_maintenance_sat_report_resources_action_window">
      <field name="name">Recursos Informe Mantenimiento SAT</field>
      <field name="res_model">lgpm_maintenance.sat_report_resources</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- actions -->
    
    <menuitem id="lgpm_maintenance_menu_sat_report_resources"
        action="lgpm_maintenance_sat_report_resources_action_window"
        parent="maintenance.menu_maintenance_configuration"
        sequence="20"
        groups="lgpm_maintenance_group_admin" />
  </data>
</odoo>