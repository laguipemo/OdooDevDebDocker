<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="lgpm_maintenace_sat_signatures_list">
      <field name="name">lgpm_maintenance_sat_signatures list</field>
      <field name="model">lgpm_maintenance.sat_signatures</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="position"/>
          <field name="signature"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="lgpm_maintenance_sat_signatures_action_window">
      <field name="name">Firmas Informe Mantenimiento SAT</field>
      <field name="res_model">lgpm_maintenance.sat_signatures</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- actions -->
    
    <menuitem id="lgpm_maintenance_menu_sat_signatures"
        action="lgpm_maintenance_sat_signatures_action_window"
        parent="maintenance.menu_maintenance_configuration"
        sequence="20"
        groups="lgpm_maintenance_group_admin" />
  </data>
</odoo>