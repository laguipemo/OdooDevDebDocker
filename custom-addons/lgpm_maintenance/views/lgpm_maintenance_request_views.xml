<odoo>
  <data>

    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="lgpm_maintenance_hr_equipment_request_view_form_inherited">
      <field name="name">lgpm_maintenance.hr_equipment.request.form.inherit</field>
      <field name="model">maintenance.request</field>
      <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form" />
      <field name="priority">999</field>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='archive_equipment_request']" position="after">
          <button string="Imprimir datos SAT" name="print_sat_data" type="object" attrs="{'invisible': [('equipment_type', '=', '')]}"/>          
        </xpath>
        <xpath expr="//field[@name='equipment_id']" position="after">
          <field name="equipment_type" invisible="1"/>
        </xpath>
        <xpath expr="//field[@name='priority']" position="before">
          <field name="purchase_order_id" />
        </xpath>
        <xpath expr="//page[@name='description_page']" position="after">
          <page name="sat" string="SAT" attrs="{'invisible': [('equipment_type', '=', '')]}">
            <!-- Equipment type -->
            <h1>
              <field name="equipment_type" />
            </h1>
            <!-- General and technical information -->
            <group>
              <!-- General information -->
              <group name="sat_equipment_gnrl" string="Información general">
                <field name="maintenance_date" />
                <field name="owner_name" />
                <field name='contact_name' />
                <field name="contact_phone" />
                <field name="contact_email" />
              </group>
              <!-- Equipment information -->
              <group name="sat_equipment_info" string="Información del equipo">
                <field name="partner_id" />
                <field name="equipment_use" />
                <field name="partner_ref" />
                <field name="manufacture_date" />
                <field name="lot_id" />
              </group>
            </group>
            <!-- SAT check and adjustment of extraction system -->
            <group name="sat_general_check" string="Estado general del equipo y del sistema de extracción" col="12">
              <group colspan="6">
                <field name="sat_is_working" widget="boolean_toggle" />
                <field name="sat_equipment_stability" />
                <field name="sat_glass_wiring_state" />
                <field name="sat_operating_hours" attrs="{'invisible':[('equipment_type','!=','Cabina de Flujo')]}" />
              </group>
              <group colspan="6">
                <field name="sat_digital_ctrl" />
                <field name="sat_extraction_sys" />
                <field name="sat_var_speed" />
              </group>
            </group>
            <!-- SAT specific requirements -->
            <group name="sat_requirements" string="Requerimientos específicos" col="12">
              <group colspan="10">
                <field name="requirements_partner" />
                <field name="requirements_client" />
              </group>
            </group>
            <!-- SAT check and adjustment of mechanical components and means -->
            <group name="sat_check_components" string="Comprobación visual y ajuste de componentes mecánicos y medios" col="12">
              <group colspan="6">
                <field name="sat_visual_acustic_ctrls" />
                <field name="sat_temp_alarm" attrs="{'invisible':[('equipment_use', '!=', 'Ácidos Concentrados')]}"/>
                <field name="sat_surface_protection" />
                <field name="sat_fixed_parts" />
                <field name="sat_insulation_joints" />
                <field name="sat_faucets_function" />
                <field name="sat_manoreductors_function" />
                <field name="sat_presence_ctrl" attrs="{'invisible': [('equipment_type', '!=', 'Vitrina de Gases')]}" />
                <field name="sat_autoprotec" attrs="{'invisible': [('equipment_type', '!=', 'Vitrina de Gases')]}" />
              </group>
              <group colspan="6">
                <field name="sat_alarm_trigger" />
                
                <field name="sat_guillotine_function" attrs="{'invisible': [('equipment_type', '!=', 'Vitrina de Gases')]}" />
                <field name="sat_guillotine_function" string="Funcionamiento puerta" attrs="{'invisible': [('equipment_type', '!=', 'Cabina de Flujo')]}"/>

                <field name="sat_guillotine_gnrl_state" attrs="{'invisible': [('equipment_type', '!=', 'Vitrina de Gases')]}" />
                <field name="sat_guillotine_gnrl_state" string="Estado general puerta" attrs="{'invisible': [('equipment_type', '!=', 'Cabina de Flujo')]}" />

                <field name="sat_guillotine_v_force" attrs="{'invisible':[('equipment_type', '!=', 'Vitrina de Gases')]}"/>
                <field name="sat_guillotine_v_force" string="Fuerza apertura puerta" attrs="{'invisible':[('equipment_type', '!=', 'Cabina de Flujo')]}"/>

                <field name="sat_airflow_sensors" attrs="{'invisible': ['|',('equipment_type', '!=', 'Cabina de Pesadas'), ('equipment_type', '!=', 'Cabina de Flujo')]}"/>
                <field name="sat_airflow_direction" widget="boolean_toggle" />
                <field name="sat_airflow_uniformity" widget="boolean_toggle" />
                <field name="sat_filters_state" attrs="{'invisible': ['|',('equipment_type', '!=', 'Armario de Seguridad'), ('equipment_type', '!=', 'Cabina de Flujo'), ('equipment_type', '!=', 'Cabina de Pesadas')]}"/>
              </group>
            </group>
            <!-- Filters integrity verification -->
            <group 
                  name="filter_integrity" 
                  string="Ensayo de verificación de integridad y estanquedad en filtros absolutos HEPA/ULPA" 
                  col="12"
                  attrs="{'invisible':[('equipment_type', '!=', 'Cabina de Flujo'),('equipment_type', '!=', 'Cabina de Pesadas')]}">
              <table class="table table-bordered text-center" colspan="12">
                <thead>
                  <tr>
                    <th scope="col" style="width: 20%;">Nº de filtro</th>
                    <th scope="col" style="width: 20%;">Nº de serie/Identificación</th>
                    <th scope="col" style="width: 15%;">Dimensiones(mm)</th>
                    <th scope="col" style="width: 10%;">Concentración aerosol (&#xB5;g/L)</th>
                    <th scope="col" style="width: 20%;">Valor obtenido (&#x2264; 0,01%)</th>
                    <th scope="col" style="width: 15%;">Resultado</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <field name="filter1_number" />
                    </td>
                    <td>
                      <field name="filter1_serial_id" />
                    </td>
                    <td>
                      <field name="filter1_dimensions" />
                    </td>
                    <td>
                      <field name="aerosol1_conc" />
                    </td>
                    <td>
                      <field name="integrity1_value" />
                    </td>
                    <td>
                      <field name="integrity1_result" />
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <field name="filter2_number" />
                    </td>
                    <td>
                      <field name="filter2_serial_id" />
                    </td>
                    <td>
                      <field name="filter2_dimensions" />
                    </td>
                    <td>
                      <field name="aerosol2_conc" />
                    </td>
                    <td>
                      <field name="integrity2_value" />
                    </td>
                    <td>
                      <field name="integrity2_result" />
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <field name="filter3_number" />
                    </td>
                    <td>
                      <field name="filter3_serial_id" />
                    </td>
                    <td>
                      <field name="filter3_dimensions" />
                    </td>
                    <td>
                      <field name="aerosol3_conc" />
                    </td>
                    <td>
                      <field name="integrity3_value" />
                    </td>
                    <td>
                      <field name="integrity3_result" />
                    </td>
                  </tr>
                </tbody>
              </table>
              
            </group>
            <!-- Particles counting -->
            <group 
                  name="particles_counting" 
                  string="Conteo de partículas" 
                  col="12"
                  attrs="{'invisible':[('equipment_type', '!=', 'Cabina de Flujo'),('equipment_type', '!=', 'Cabina de Pesadas')]}">
              <table class="table table-bordered text-center" colspan="12">
                <thead>
                  <tr>
                    <th scope="col" style="width: 10%;"><p>0,3 &#xB5;m <br/> (ISO 5 &lt; 10200)</p></th>
                    <th scope="col" style="width: 22%;">Alcanza norma</th>
                    <th scope="col" style="width: 10%;"><p>0,5 &#xB5;m <br/> (ISO 5 &lt; 3520)</p></th>
                    <th scope="col" style="width: 22%;">Alcanza norma</th>
                    <th scope="col" style="width: 10%;"><p>5 &#xB5;m <br/> (ISO 5 &lt; 29)</p></th>
                    <th scope="col" style="width: 22%;">Alcanza norma</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <field name="particles_counting_03um" />
                    </td>
                    <td>
                      <field name="standard_03um" />
                    </td>
                    <td>
                      <field name="particles_counting_05um" />
                    </td>
                    <td>
                      <field name="standard_05um" />
                    </td>
                    <td>
                      <field name="particles_counting_5um" />
                    </td>
                    <td>
                      <field name="standard_5um" />
                    </td>
                  </tr>
                </tbody>
              </table>
              
            </group>
          
            <!-- Extraction volume measurement and calculation -->
            <group name="extraction_measurements" string="Medición volumen de extracción" col="12">
              <group string="Dimensiones" colspan="4">
                <field name="work_length" />
                <field name="work_height" />
                <field name="measurement_area" />
              </group>
              <group string="Velocidades frontal" colspan="8">
                <table class="table table-bordered text-center" colspan="2">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col">Izquierda</th>
                      <th scope="col">Centro</th>
                      <th scope="col">Derecha</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th>Arriba</th>
                      <td>
                        <field name="frontal_v1" />
                      </td>
                      <td>
                        <field name="frontal_v2" />
                      </td>
                      <td>
                        <field name="frontal_v3" />
                      </td>
                    </tr>
                    <tr>
                      <th>Centro</th>
                      <td>
                        <field name="frontal_v4" />
                      </td>
                      <td>
                        <field name="frontal_v5" />
                      </td>
                      <td>
                        <field name="frontal_v6" />
                      </td>
                    </tr>
                    <tr>
                      <th>Abajo</th>
                      <td>
                        <field name="frontal_v7" />
                      </td>
                      <td>
                        <field name="frontal_v8" />
                      </td>
                      <td>
                        <field name="frontal_v9" />
                      </td>
                    </tr>
                    <tr>
                      <th colspan="3" style="text-align:right;">Media</th>
                      <td>
                        <field name="frontal_v_media" />
                      </td>
                    </tr>
                  </tbody>
                </table>
              </group>
            </group>
            <group name="extraction_volume" string="Cálculo volumen de extracción" col="12">
              <group colspan="4" name="volume">
                <field name="extraction_volume" />
              </group>
            </group>
            <!-- Descendent volume measurement and calculation -->
            <group 
                name="descendent_measurements" 
                string="Medición volumen de flujo descendente" 
                col="12"
                attrs="{'invisible':[('equipment_type', '!=', 'Cabina de Flujo'),('equipment_type', '!=', 'Cabina de Pesadas')]}">
              <group string="Dimensiones" colspan="4">
                <field name="work_length" />
                <field name="work_depth" />
                <field name="measurement_area_desc" />
              </group>
              <group string="Velocidades aire descendente" colspan="8">
                <table class="table table-bordered text-center" colspan="2">
                  <thead>
                    <tr>
                      <th scope="col"></th>
                      <th scope="col">Izquierda</th>
                      <th scope="col">Centro</th>
                      <th scope="col">Derecha</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th>Delante</th>
                      <td>
                        <field name="descendent_v1" />
                      </td>
                      <td>
                        <field name="descendent_v2" />
                      </td>
                      <td>
                        <field name="descendent_v3" />
                      </td>
                    </tr>
                    <tr>
                      <th>Centro</th>
                      <td>
                        <field name="descendent_v4" />
                      </td>
                      <td>
                        <field name="descendent_v5" />
                      </td>
                      <td>
                        <field name="descendent_v6" />
                      </td>
                    </tr>
                    <tr>
                      <th>Detrás</th>
                      <td>
                        <field name="descendent_v7" />
                      </td>
                      <td>
                        <field name="descendent_v8" />
                      </td>
                      <td>
                        <field name="descendent_v9" />
                      </td>
                    </tr>
                    <tr>
                      <th colspan="3" style="text-align:right;">Media</th>
                      <td>
                        <field name="descendent_v_media" />
                      </td>
                    </tr>
                  </tbody>
                </table>
              </group>
            </group>
            <group 
                name="descendent_volume" 
                string="Cálculo volumen de flujo descendente" 
                col="12"
                attrs="{'invisible':[('equipment_type', '!=', 'Cabina de Flujo'),('equipment_type', '!=', 'Cabina de Pesadas')]}">
              <group colspan="4" name="volume">
                <field name="descendent_volume" />
              </group>
            </group>
            
            <group name="other_measures" string="Otras Medidas" col="12">
              <group name="others" colspan="6">
                <field name="diff_press" widget="float" attrs="{'invisible':[('equipment_type', '!=', 'Cabina de Flujo')]}"/>
                <field name="temperature" widget="float" />
                <field name="guillotine_force" widget="float" attrs="{'invisible': ['|', ('sat_guillotine_v_force', '=', 'N'),('sat_guillotine_v_force','=', 'NP')]}"/>
              </group>
              
            </group>
            <!-- Lighting and noise levels check -->
            <group name="lighting_noise" string="Comprobación de niveles de iluminación y ruido" col="12">
              <group string="Iluminación" colspan="7">
                <table class="table table-bordered text-center" colspan="2">
                  <thead>
                    <tr>
                      <th scope="col">Izquierda</th>
                      <th scope="col">Centro</th>
                      <th scope="col">Derecha</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                        <field name="lighting_v1" />
                      </td>
                      <td>
                        <field name="lighting_v2" />
                      </td>
                      <td>
                        <field name="lighting_v3" />
                      </td>
                    </tr>
                    <tr>
                      <th colspan="2" style="text-align:right;">Media</th>
                      <td>
                        <field name="lighting_v_media" />
                      </td>
                    </tr>
                  </tbody>
                </table>
              </group>
              <group string="Sonido" colspan="5">
                <field name="noise_level" />
              </group>
            </group>

            <group name="observations_group" string="Observaciones" col="12">
              <field 
                  name="observations" 
                  widget="html" 
                  placeholder="Introduce las observaciones a reflejar en el informe" 
                  nolabel="1" 
                  colspan="12" />
            </group>
            <group name="no_conformities_group" string="No conformidades" col="12">
              <field 
                  name="non_conformities" 
                  widget="html"
                  placeholder="Introduce las No conformidades a reflejar en el informe" 
                  nolabel="1" 
                  colspan="12" />
            </group>

            <group name="results" string="Resultado" col="12">
              <table class="table table-bordered text-left" colspan="10" >
                <thead>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <p>El equipo está de acuerdo con las normas / regulaciones petinentes: </p>
                    </td>
                    <td>
                      <field name="complies_regulation" nolabel="1" widget="boolean_toggle" />
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <p>Por cuestiones de seguridad es necesaria la intervención del equipo:</p>
                    </td>
                    <td>
                      <field name="needs_intervention" nolabel="1" widget="boolean_toggle" />
                    </td>
                  </tr>
                </tbody>
              </table>
            </group>

            <group name="photos" string="Fotos del equipo" col="12">
              <group colspan="2" class="d-flex flex-row align-items-center p-4">
                <field name="photo1" widget="image" nolabel="1" class="img img-fluid o_we_custom_image o_modified_image_to_save" style="max-width: 100px;" />
              </group>
              <group colspan="2" class="d-flex flex-row align-items-center p-4">
                <field name="photo2" widget="image" nolabel="1" class="img img-fluid o_we_custom_image o_modified_image_to_save" style="max-width: 100px;" />
              </group>
              <group colspan="2" class="d-flex flex-row align-items-center p-4">
                <field name="photo3" widget="image" nolabel="1" class="img img-fluid o_we_custom_image o_modified_image_to_save" style="max-width: 100px;" />
              </group>
              <group colspan="2" class="d-flex flex-row align-items-center p-4">
                <field name="photo4" widget="image" nolabel="1" class="img img-fluid o_we_custom_image o_modified_image_to_save" style="max-width: 100px;" />
              </group>
              <group colspan="2" class="d-flex flex-row align-items-center p-4">
                <field name="photo5" widget="image" nolabel="1" class="img img-fluid o_we_custom_image o_modified_image_to_save" style="max-width: 100px;" />
              </group>
              <group colspan="2" class="d-flex flex-row align-items-center p-4">
                <field name="photo6" widget="image" nolabel="1" class="img img-fluid o_we_custom_image o_modified_image_to_save" style="max-width: 100px;" />
              </group>
            </group>

            <!-- </div> -->
          </page>
        </xpath>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record id="lgpm_maintenance_hr_equipment_request_action_inherited" model="ir.actions.act_window">
      <field name="name">Maintenance Requests</field>
      <field name="res_model">maintenance.request</field>
      <field name="view_mode">kanban,tree,form,pivot,graph,calendar</field>
      <field name="view_id" ref="maintenance.hr_equipment_request_view_kanban"/>
      <field name="context">{'default_user_id': uid}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
                Add a new maintenance request
        </p>
        <p>
                Follow the process of the request and communicate with the collaborator.
        </p>
      </field>
    </record>

    <!-- actions -->
    <menuitem id="maintenance.menu_m_request_form" name="Maintenance Requests" parent="maintenance.menu_m_request" action="lgpm_maintenance_hr_equipment_request_action_inherited" groups="maintenance.group_equipment_manager,base.group_user" sequence="1"/>


  </data>
</odoo>