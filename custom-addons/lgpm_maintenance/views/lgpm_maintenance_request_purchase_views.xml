<odoo>
  <data>

    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="lgpm_maintenance.purchase_order_form_view_inherited">
      <field name="name">lgpm_maintenance.purchase_order.form.inherit</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="priority">8</field>
      <field name="arch" type="xml">
        <div name="button_box" position="inside">
          <field name="maintenance_request_ids" invisible="1" />
          <button
            type="object"
            name="action_view_maintenance_request"
            class="oe_stat_button"
            icon="fa-wrench"
            groups="base.group_user"
          >
            <field
              name="maintenance_request_count"
              widget="statinfo"
              string="Maintenances"
            />
          </button>
        </div>
      </field>
    </record>

  </data>
</odoo>