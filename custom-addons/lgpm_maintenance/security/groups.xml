<odoo>
    <data>
        <!-- New category for the Soporte module, specifically for users access -->
        <record id="lgpm_maintenance_category_users_access" model="ir.module.category">
            <field name="name">Mantenimineto SAT</field>
            <field name="description">Gesti√≥n de usuarios para el los mantenimiento SAT</field>
            <field name="sequence">100</field>
        </record>

        <!-- New group of users for he Soporte module, specifically for users
        that only have access for consulting the information -->
        <record id="lgpm_maintenance_group_users" model="res.groups">
            <field name="name">Usuarios informes</field>
            <field name="category_id" ref="lgpm_maintenance_category_users_access"/>
            <field name="comment">Usuarios que solo pueden generar los informes de manteniento</field>
            <!-- Add the same permissions that have the users of the group "base.group_user" -->
            <field name="users" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <!-- New group of users for he Soporte module, specifically for users
        that can make changes to the information (e.g. create, update, delete) -->
        <record id="lgpm_maintenance_group_admins" model="res.groups">
            <field name="name">Usuarios administradores informes</field>
            <field name="category_id" ref="lgpm_maintenance_category_users_access"/>
            <field name="comment">Usuarios administadores para Soporte</field>
            <!-- Add the same permissions that have the users of the group "base.user_admin" -->
            <field name="users" eval="[(4,ref('base.user_admin'))]"/>
            <!-- Add the same permissions that have the users of the group "soporte_group_users" -->
            <field name="implied_ids" eval="[(4,ref('lgpm_maintenance_group_users'))]"/>
        </record>
    </data>
</odoo>
