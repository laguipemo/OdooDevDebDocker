<!-- views/invoice_digitalize.xml -->
<odoo>
    <data>
        <record id="view_invoice_digitalize_form" model="ir.ui.view">
            <field name="name">invoice.digitalize.form</field>
            <field name="model">invoice.digitalize</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="file" widget="binary" filename="filename"/>
                         <field name="filename" invisible="1"/>
                        <field name="create_partner"/>
                        <field name="create_product"/>
                        <field name="currency_id"/>
                        <field name="match_product"/>
                    </group>
                    <footer>
                        <button string="Accept" type="object" class="oe_highlight" name="action_accept"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_invoice_digitalize"
                    name="Digitize Invoice"
                    res_model="invoice.digitalize"
                    view_mode="form"
                    view_id="view_invoice_digitalize_form"
                    target="new"
        />
    </data>
</odoo>
