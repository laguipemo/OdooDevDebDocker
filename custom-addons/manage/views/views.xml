    <!-- Task module -->
    <record model="ir.ui.view" id="manage.task_list">
      <field name="name">manage task list</field>
      <field name="model">manage.task</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
            <field name="creation_date"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="is_paused"/>
            <field name="sprint"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.task_form">
      <field name="name">manage task form</field>
      <field name="model">manage.task</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="creation_date"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="is_paused"/>
            <field name="sprint"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Sprint module -->
    <record model="ir.ui.view" id="manage.sprint_list">
      <field name="name">manage sprint list</field>
      <field name="model">manage.sprint</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="tasks"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.sprint_form">
      <field name="name">manage sprint form</field>
      <field name="model">manage.sprint</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="tasks"/>
          </group>
        </form>
      </field>
    </record>


