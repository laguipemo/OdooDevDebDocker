    <!-- Developer module -->
    <record model="ir.ui.view" id="manage.developer_form">
      <field name="name">manage developer form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <!-- <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="after">
          <page name="developer" string="Developer">
            <group>
              <field name="technologies" string="Tecnologías" widget="many2many_tags"/>
            </group>
          </page>
        </xpath> -->
        <page name="internal_notes" position="after">
          <page name="developer" string="Developer" attrs="{'invisible': [('is_developer', '=', False)]}">
            <group>
              <field name="is_developer" string="Developer" widget="boolean"/>
              <field name="technologies" string="Tecnologías" widget="many2many_tags"/>
            </group>
          </page>
        </page>
      </field>
    </record>


    <!-- Project module -->
    <record model="ir.ui.view" id="manage.project_list">
      <field name="name">manage project list</field>
      <field name="model">manage.project</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
            <field name="histories"/>
            <field name="sprints"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.project_form">
      <field name="name">manage project form</field>
      <field name="model">manage.project</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="histories"/>
            <field name="sprints"/>
          </group>
        </form>
      </field>
    </record>

    <!-- History module -->
    <record model="ir.ui.view" id="manage.history_list">
      <field name="name">manage history list</field>
      <field name="model">manage.history</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
            <field name="project"/>
            <field name="tasks"/>
            <field name="used_technologies"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.history_form">
      <field name="name">manage history form</field>
      <field name="model">manage.history</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="project"/>
            <field name="name"/>
            <field name="description"/>
            <field name="tasks"/>
            <field name="used_technologies"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Task module -->
    <record model="ir.ui.view" id="manage.task_list">
      <field name="name">manage task list</field>
      <field name="model">manage.task</field>
      <field name="arch" type="xml">
        <tree>
            <field name="project"/>
            <field name="code"/>
            <field name="name"/>
            <field name="description"/>
            <field name="history"/>
            <field name="definition_date"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="is_paused"/>
            <field name="sprint"/>
            <field name="developer"/>
            <field name="technologies"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.task_form">
      <field name="name">manage task form</field>
      <field name="model">manage.task</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="project"/>
            <field name="code"/>
            <field name="name"/>
            <field name="description"/>
            <field name="history"/>
            <field name="definition_date"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="is_paused"/>
            <field name="sprint"/>
            <field name="developer" domain="[('is_developer', '=', True)]"/>
            <field name="technologies"/>
          </group>
        </form>
      </field>
    </record>

    <!-- Sprint module -->
    <record model="ir.ui.view" id="manage.sprint_list">
      <field name="name">manage sprint list</field>
      <field name="model">manage.sprint</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
            <field name="project"/> 
            <field name="start_date"/>
            <field name="duration"/>
            <field name="end_date"/>
            <field name="tasks"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.sprint_form">
      <field name="name">manage sprint form</field>
      <field name="model">manage.sprint</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="project"/>
            <field name="name"/>
            <field name="description"/>
            <field name="start_date"/>
            <field name="duration"/>
            <field name="end_date"/>
            <field name="tasks"/>
          </group>
        </form>
      </field>
    </record>


    <!-- Technology module -->
    <record model="ir.ui.view" id="manage.technology_list">
      <field name="name">manage technology list</field>
      <field name="model">manage.technology</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="description"/>
            <field name="photo"/>
            <field name="tasks"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="manage.technology_form">
      <field name="name">manage technology form</field>
      <field name="model">manage.technology</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="photo"/>
            <field name="tasks"/>
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
