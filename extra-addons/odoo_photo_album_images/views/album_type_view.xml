<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_view_album_type_form" model="ir.ui.view">
            <field name="name">album.type.form</field>
            <field name="model">album.type</field>
            <field name="arch" type="xml">
                <form string="Album Type">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="custom_view_album_type_tree" model="ir.ui.view">
            <field name="name">album.type.tree</field>
            <field name="model">album.type</field>
            <field name="arch" type="xml">
                <tree string="Album Type">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="custom_action_album_type" model="ir.actions.act_window">
            <field name="name">Album Types</field>
            <field name="res_model">album.type</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>